{
  "compilerOptions": {
    /* File structure */
    "rootDir": "src",
    "outDir": "dist",

    /* Module and environment */
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "types": ["node"],

    /* Output files */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strict type checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Module behavior */
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    /* Performance */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
